<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="entity.Orders" table="orders">
		<meta attribute="class-description">
			This class contains the orders detail.
		</meta>
		<id name="oid" type="java.lang.Integer" column="oid">
			<generator class="native"/>
		</id>
		<property name="rid" column="rid" type="java.lang.String"/>
		<property name="restaurantName" column="restaurantName" type="java.lang.String"/>
		<property name="restaurantAddress" column="restaurantAddress" type="java.lang.String"/>
		<property name="mid" column="mid" type="java.lang.Integer"/>
		<property name="memberName" column="memberName" type="java.lang.String"/>
		<property name="level" column="level" type="java.lang.Integer"/>
		<property name="memberAddress" column="memberAddress" type="java.lang.String"/>
		<property name="remarks" column="remarks" type="java.lang.String"/>
		<property name="price" column="price" type="java.lang.Double"/>
		<property name="arrivalTime" column="arrivalTime" type="java.lang.String"/>
		<property name="seconds" column="seconds" type="java.lang.Integer"/>
		<property name="state" column="state" type="java.lang.Integer"/>
	</class>
</hibernate-mapping>